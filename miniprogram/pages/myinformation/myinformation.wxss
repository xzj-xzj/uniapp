/* pages/myinformation/myinformation.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: white;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  padding: 20px;
  border-radius: 5px;
}

.label {
  font-size: 20px;
  font-weight: bold;
  width: 30%;
}

.value {
  font-size: 18px;
  width: 70%;
}

.input {
  width: 70%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
  font-size: 16px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.get-user-info-button, .save-button {
  width: 80%;
  height: 40px;
  background-color: #7ddc7d;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  margin-top: 20px;
}