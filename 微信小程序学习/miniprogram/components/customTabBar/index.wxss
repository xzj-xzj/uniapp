/* components/customTabBar/index.wxss */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  padding: 10px 0;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-bar-icon {
  width: 24px;
  height: 24px;
}

.tab-bar-text {
  font-size: 12px;
  color: #7a7a7a;
}

.plus-icon {
  position: relative;
}

.plus-icon-img {
  width: 48px; /* 更大的图标 */
  height: 48px; /* 更大的图标 */
}

/* Optional: Add active state styles */
.tab-bar-item.active .tab-bar-icon,
.tab-bar-item.active .tab-bar-text {
  color: #007aff; /* Active color */
}